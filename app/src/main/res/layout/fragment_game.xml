<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".GameFragment" android:id="@+id/frameLayout2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="Player turn :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_turn_textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/guest_name"
            app:layout_constraintBottom_toBottomOf="@+id/guest_name" android:textSize="18sp"/>
