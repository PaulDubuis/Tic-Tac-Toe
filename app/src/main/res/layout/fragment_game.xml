            android:layout_marginRight="8dp" android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" android:textStyle="bold"/>
    <TextView
            android:text="O ("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guest_name"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" android:textStyle="bold"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="368dp"
            android:layout_height="397dp" tools:layout_editor_absoluteY="106dp" tools:layout_editor_absoluteX="8dp">

