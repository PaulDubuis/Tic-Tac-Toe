<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".GameFragment" android:id="@+id/frameLayout2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="Player turn :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_turn_textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/guest_name"
            app:layout_constraintBottom_toBottomOf="@+id/guest_name" android:textSize="18sp"/>
    <TextView
            android:text="X (Guest)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guest_name"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" android:textStyle="bold"/>
    <TextView
            android:text="O ("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guest_name"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30sp" android:textStyle="bold"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/player_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:columnCount="3" app:rowCount="3"
            app:layout_constraintVertical_bias="0.424"
            android:padding="0dp"
            android:layout_margin="0dp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bt8" app:layout_column="1"
                app:layout_row="2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="2"
                android:id="@+id/bt9"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="0"
                android:id="@+id/bt1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="0"
                android:id="@+id/bt7"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="0"
                android:id="@+id/bt4"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="1"
                android:id="@+id/bt5"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="2"
                android:id="@+id/bt6"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="1"
                android:id="@+id/bt2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="2"
                android:id="@+id/bt3" android:layout_margin="0dp"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>